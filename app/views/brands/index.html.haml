.table-container
  .table-information
    %h1.table-title Marcas
    .table-actions
      = link_to 'Adicionar marca', new_brand_path, class: "new-button btn btn-success text-light", data: {loads_in_ajax_modal: true}
  .table-responsive
    %table.table.table-hover
      %thead
        %tr
          %th.col-2 ID
          %th.col-2 Nome
          %th.col-1 Ações
      %tbody
        - @brands.each do |brand|
          %tr
            %td= brand.id
            %td= brand.name  
            %td 
              .actions
                = link_to 'Editar', edit_brand_path(brand), class: "btn btn-warning text-light", data: {loads_in_ajax_modal: true}
                = link_to 'Apagar', brand, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger text-light"
