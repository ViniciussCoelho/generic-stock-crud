= simple_form_for @product, data: {submits_to_ajax_modal: true} do |f|
  .form-group
    = f.input :name, label: "Nome", input_html: {class: "form-control"}
  .form-group
    = f.input :quantity, label: "Quantidade", input_html: {class: "form-control"}
  .form-group
    Data de validade
    = f.text_field :expiration_date, "data-provide" => 'datepicker', class: "form-control", "data-date-format" => "dd-mm-yyyy"
  .form-group
    = f.input :price, label: "Pre√ßo", input_html: {class: "form-control"}
  .form-group
    = f.input :category_id, label: "Categoria", collection: Category.all, input_html: {class: "form-control"}
  .form-group
    = f.input :brand_id, label: "Marca", collection: Brand.all, input_html: {class: "form-control"}
  .form-group
    = f.button :submit, "Salvar", class: "btn btn-primary text-light"

