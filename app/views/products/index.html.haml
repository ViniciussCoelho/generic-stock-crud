.table-container
  .table-information
    %h1.table-title Produtos
    .table-actions
      = link_to 'Adicionar produto', new_product_path, class: "new-button btn btn-success text-light", data: {loads_in_ajax_modal: true}
  .table-area
    %table.table-hover.table-radius.table-responsive.table-striped{style: "border: 2px solid #{organization_color}"}
      %thead.table-header
        %tr{style: "background-color: #{organization_color};"}
          %th.col-2 Nome
          %th.col-2 Quantidade
          %th.col-2 Data de validade
          %th.col-2 Preço
          %th.col-2 Categoria
          %th.col-2 Marca
          %th.col-2 Ações
      %tbody
        - @products.each do |product|
          %tr
            %td= product.name
            %td= product.quantity
            %td= product.expiration_date? ? l(product.expiration_date) : "Não informado"
            %td= product.price
            %td= product.category.name
            %td= product.brand.name
            %td
              .actions
                = link_to 'Editar', edit_product_path(product), class: "btn btn-warning text-light", data: {loads_in_ajax_modal: true}
                = link_to 'Apagar', product, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger text-light"
    = will_paginate @posts
